<!DOCTYPE html>
<html>
  <head>
    <title>Flights</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <nav class="nav">
      <a href="/">Home</a>
      <a href="/flights">All Flights</a>
      <a href="/flights/new">Add New Flight</a>
    </nav>
    <h1><%= title %></h1>
    <div class="flight-details">
      <ul>
        <li><span>Airline:</span> <%= flight.airline %></li>
        <li><span>Airport:</span> <%= flight.airport %></li>
        <li><span>Flight Number:</span> <%= flight.flightNo %></li>
        <li><span>Departs:</span> <%= flight.departs %></li>
        <% flight.destinations.forEach(e => { %>
          <li>
            <span>Arrival:</span>
            <%= e.airport %>
            -
            <%= e.arrival %>
          </li>
            <% }) %>
        </ul>
      </div>
      <h2> Add Destination</h2>
      <form action="/flights/<%= flight._id %>/destinations" method="POST">
        <label>Airport:
          <select name="airport" >
            <option value="LAX">LAX</option>
      <option value="SFO">SFO</option>
      <option value="DEN">DEN</option>
      <option value="SAN">SAN</option>
      <option value="AUS">AUS</option>
      <option value="TPA">TPA</option>
      <option value="CMH">CMH</option>
      <option value="BWI">BWI</option>
      <option value="ORD">ORD</option>
      <option value="MDW">MDW</option>
      <option value="DAL">DAL</option>
      <option value="ATL">ATL</option>
      <option value="DFW">DFW</option>
      <option value="SEA">SEA</option>
      <option value="LAS">LAS</option>
      <option value="EWR">EWR</option>
      <option value="PHX">PHX</option>
      <option value="IAH">IAH</option>
      <option value="MIA">MIA</option>
      <option value="BOS">BOS</option>
      <option value="DCA">DCA</option>
      <option value="LGA">LGA</option>
      <option value="JFK" selected>JFK</option>
          </select>
        </label><br>
      </label><br>
      <label>Arrives:
        <input type="datetime-local" name="arrival">
      </label><br>
      <input type="submit" value="Add Destination" class="add-dest-btn">
      </form>

</body>
</html>