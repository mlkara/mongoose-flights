<!DOCTYPE html>
<html>
  <head>
    <title>Flights</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <nav class="nav">
      <a href="/">Home</a>
      <a href="/flights">All Flights</a>
      <a href="/flights/new">Add New Flight</a>
    </nav>
    <h1>All Flights</h1>
  <div class="flight-index">
    <ul>
      <li><h3>Airline</h3></li>
      <li><h3>Airport</h3></li>
      <li><h3>Flight Number</h3></li>
      <li><h3>Departs</h3></li>
      <li></li>
    </ul>
    <% flights.forEach(f => { %>
      <ul>
        <li><%= f.airline %></li>
        <li><%= f.airport %></li>
        <li><%= f.flightNo %></li>
        <li><%= f.departs%></li>
        <li class="detail"><a href="/flights/<%= f.id %>">Details</a></li>
      </ul>
    <% }) %>
  </div>

</body>
</html>